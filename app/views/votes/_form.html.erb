<div class="container">
  <div class="row">
    <div class="span6 offset3">
      <% @vote = Vote.new %>
      <%= simple_form_for(@vote) do |f| %>

      <%= f.hidden_field :score, id: 'hidden-score' %>
      <%= f.hidden_field :place_id, :value => params[:id] %>
      
      <%= f.submit "", class: "btn btn-large btn-primary green", id: 'quiet' %>
      <%= f.submit "", class: "btn btn-large btn-primary orange", id: 'moderate' %>
      <%= f.submit "", class: "btn btn-large btn-primary red", id: 'busy' %>

      <% end %>
    </div>
  </div>
</div>



<script type="text/javascript">
$( document ).ready(function() {

  $('#quiet').click(function(e) {
    e.preventDefault();
    $('#hidden-score').val('1');
    $('#new_vote').submit();
  })

  $('#moderate').click(function(e) {
    e.preventDefault();
    $('#hidden-score').val('50');
    $('#new_vote').submit();
  })

  $('#busy').click(function(e) {
    e.preventDefault();
    $('#hidden-score').val('100');
    $('#new_vote').submit();
  })

})

</script>