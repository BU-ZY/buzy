<div class="row-fluid" id="search-form">
  <%= form_tag(home_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input">
      <%= text_field_tag :search, params[:search], id: "search-bar", class: "span5", placeholder: "How busy is...", value: '' %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" id="clear"><i class="icon-remove"></i></button>
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
</div>

<script>
$(function() {
	$clearBtn = $('#search-form .btn#clear');
	$inputField = $('#search-form #search-bar');

	// hide the clear button
	$clearBtn.hide();

	// listen for when input changes
	$inputField.bind("change paste keyup", function() {
	   if ($(this).val().length > 0) { // if there is input
	   	$clearBtn.show();
	   } else { // it's empty
	   	$clearBtn.hide();
	   }
	});

	// if the clear button is clicked
	$clearBtn.click(function(event) {
		event.preventDefault(); // don't submit the form
		$inputField.val("");
		$(this).hide(); // text box is empty so hide this
	});	
});
</script>