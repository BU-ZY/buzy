<!-- display place names, display each vote for the place -->
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>



<center>
<h1><a href="/places"> &#8592; </a><%= @place.name %></h1>
<% if @place.votes.blank? %>
	<h2>this place doesn't have any votes!</h2>
<% else %>
	<h2>Buzzy score for the past <%= @time_ago %> minutes 
		(<a href="/places/<%= @place.id %>/60">last hour</a>
		<a href="/places/<%= @place.id %>/<%= 24*60 %>">last day</a>
		<a href="/places/<%= @place.id %>/<%= 7*24*60 %>">last week</a>)</h2>
	<h1 style = "color:<%= @color %>;"><%= @score %></h1>
	<h2><%= @place.name %>'s votes</h2>
	<% @place.votes.each do |vote| %>
		<li><%= vote.score %>, <%= time_ago_in_words(vote.created_at) %> ago</li>
	<% end %>
<% end %>

<%= line_chart @graphable %>

<h2>How far back to check (minutes)?</h2>
<%= form_for @place, :html => {:method => :post} do |f| %>
	<div class="text-box" style="width: 100px;"><%= text_field_tag(:time_ago) %></div>
  <%= f.submit "Check" %>
<% end %>


<% if @username=='deven' %>
	<h1 style="position: fixed; top: 50%; left: 10px; z-index: 100; color: orange;">HEY DEVEN</h1>
<% end %>

<% if @username=='alex' %>
	<marquee style="position: fixed; top: 50%; left: 10px; z-index: 100; color: brown;" behavior="slide" direction="left"><h1>your name is alex</h1></marquee>
<% end %>

<% if @username=='kanav' %>
	<marquee style="position: fixed; top: 50%; left: 10px; z-index: 100; color: brown; width: 100vw;" behavior="slide" direction="left"><h1>knaaaaaaaaaaaaaaaaaaaaaaaaav</h1></marquee>
<% end %>

<% if @username=='clement' %>
	<marquee style="position: fixed; top: 50%; left: 10px; z-index: 100; color: blue; width: 100vw;" behavior="slide" direction="left"><h1>herro</h1></marquee>
<% end %>

</center>