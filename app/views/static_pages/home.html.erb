<div class="center hero-unit">
	<h1 id="title">BUZY</h1>

	<h2>
		The place to go when you want to know what's busy and whats buzzing on campus
	</h2>
	<h3>BU's busyness score: 
		<span style="color: <%= @average_score_color %>;">
			<%= @average_score %>
		</span>
	</h3>

	<%= link_to "Places", '/places', class: "btn btn-large btn-primary" %> <%= link_to "Vote", '/vote', class: "btn btn-large btn-primary" %>

	<br>
	<br>
	
	<div class="row">
		<div id="choices">
			<% @places_and_colors.each do |place, color| %>
				<a href="\places/<%= place.id %>/60">
					<div class="square choice" style="background-color:<%= color %> ;">
						<%= place.name%>
						<h3><%= place.score %></h3>
					</div>
				</a>
			<% end %>
		</div>
	</div>
</div>
